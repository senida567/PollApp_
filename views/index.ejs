<html>
<head>
    <meta charset="utf-8">
    <title>Ankete</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <style>
        table {
            color: #333;
            font-family: Helvetica, Arial, sans-serif;
            width: 640px;
            border-collapse:
                    collapse; border-spacing: 0;
            border: 2px solid black;
        }

        td, th {
            /*border: 1px solid transparent;/* No more visible border */
            height: 30px;
            transition: all 0.3s;  /* Simple transition for hover effect */
        }

        th {
            background: #DFDFDF;  /* Darken header a bit */
            font-weight: bold;
            border-left: 2px solid black;
        }

        td {
            background: #FAFAFA;
            text-align: center;
            border-left: 2px solid black;
        }

        tr{
            border-bottom: 2px solid black;
        }

        /* Cells in even rows (2,4,6...) are one color */
        tr:nth-child(even) td { background: #F1F1F1; }

        /* Cells in odd rows (1,3,5...) are another (excludes header cells)  */
        tr:nth-child(odd) td { background: #FEFEFE; }

        tr td:hover { background: #666; color: #FFF; }
        /* Hover cell effect! */
    </style>
</head>
<body>
    <h1><%= title %></h1>

    <table>
        <tr>
            <th>Å ifra predmeta</th>
            <th>Predmet</th>
            <th>Anketa</th>
        </tr>
        <%for(var i = 0; i < objekti.length; i++){%>
            <tr>
                <td>
                    <%= objekti[i].sifra_predavanja %>
                </td>
                <td>
                    <%= objekti[i].naziv %>
                </td>
                <td>
                    <% if(objekti[i].anketa == false) {%>
                        <form action="/<%= user %>/predmet/<%= objekti[i].sifra_predavanja %>" method="GET">
                            <button> otvori </button>
                        </form>
                    <%}else{%>
                        <form method="GET" action="/aktiviraj/<%= user %>/<%= objekti[i].sifra_predavanja %>">
                            <button> Deaktiviraj </button>
                        </form>
                    <%}%>
                </td>
            </tr>
        <%}%>
    </table>

</body>
</html>